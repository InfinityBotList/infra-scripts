[Service]
Type=simple
StartLimitIntervalSec=0
ExecStart=/usr/bin/npm start
User=root
Group=root
WorkingDirectory=/root/InfinityBotList/InfinityManager/
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
RestartSec=1
Restart=always

[Install]
WantedBy=multi-user.target

[Unit]
PartOf=ibl.target
Description="IBL Manager Bot [v3, legacy]"
After=popplio-v1.service
