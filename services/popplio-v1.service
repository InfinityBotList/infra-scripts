[Service]
Type=simple
Description="Popplio [v3]"
After=ibl-maint.service
StartLimitIntervalSec=0
ExecStart=/root/Popplio/popplio
User=root
Group=root
RuntimeDirectory=/root/Popplio
WorkingDirectory=/root/Popplio
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
RestartSec=1
Restart=always

[Install]
WantedBy=multi-user.target

[Unit]
PartOf=ibl.target
