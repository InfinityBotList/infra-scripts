[Service]
Type=simple
ExecStart=/usr/bin/make run
User=root
Group=root
WorkingDirectory=/root/arcadia/api
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
RestartSec=1
Restart=always

[Install]
WantedBy=multi-user.target

[Unit]
PartOf=ibl.target
Description="Arcadia API [v4]"
After=ibl-maint.service
